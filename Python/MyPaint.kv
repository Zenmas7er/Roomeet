# MyPaint.kv

<SelectedColor>:
    size: 25,25
    canvas:
        Color:
            rgba: self.selected_color

<ColPopup>:
    title: 'Color Select'
    size_hint: None, None
    size: 400,400
    auto_dismiss: False
    ColPckr:
        on_color: app.root.selected_color = self.color
        Button:
            text: 'Select'
            pos_hint: {'center_x': .76, 'y': .03}
            size_hint: None, None
            size: 100, 50
            on_press: root.dismiss()

<MyPaintWidget>:
    size: root.size
    penSlider: penSlider
    canvas:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        size_hint: None, None
        size: 100,25
        pos: 0,0
        text: 'Color Select'
        on_press: root.select_ColPckr(*args)
    Button:
        size_hint: None, None
        size: 100,25
        pos: 100,0
        text: 'Clear'
        on_release: root.select_Clear()
    Label:
        id: penSize
        font_size: '12sp'
        pos: 25, 0
        text: 'Pen Size'
        color: 1, 1, 1, 1
    Slider:
        id: penSlider
        orientation: 'horizontal'
        pos: 25, 25
        min: 2
        max: 20
        value: 2
    Label:
        id: penSizeValue
        font_size: '12sp'
        pos: 80,25
        text: str(int(penSlider.value))
        color: 1,1,1,1
