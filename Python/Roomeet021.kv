# Roomeet021.kv

<SelectedColor>:
    canvas:
        Color:
            rgba: self.selected_color

<ColPopup>:
    title: 'Color Select'
    size_hint: None, None
    size: 400, 400
    auto_dismiss: False
    ColPckr:
        on_color: app.root.selected_color = self.color
        Button:
            text: 'Select'
            pos_hint: {'center_x': .76, 'y': .03}
            size_hint: None, None
            size: 100, 50
            on_press: root.dismiss()

<RoomeetCanvas>:
    size: root.size
    fileName: fileName
    canvas:
        Color:
            rgb: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'horizontal'
        pos_hint:{"top": 1}
        height: 50
        Button:
            size_hint: None, None
            size: 100, 50
            pos_hint: {"x": .167, "top": 1}
            text: 'Color Select'
            on_press: root.select_ColPckr(*args)
        Button:
            size_hint: None, None
            size: 100, 50
            pos_hint: {"x": 0.3, "top": 1}
            text: 'Eraser'
            on_release: app.root.selected_color = [1, 1, 1, 1]
        Button:
            size_hint: None, None
            size: 100, 50
            pos_hint: {"x": 0.5, "top": 1}
            text: 'Clear'
            on_release: root.select_Clear()
        ToggleButton:
            size_hint: None, None
            size: 100, 50
            pos_hint: {"X": 0.667, "top": 1}
            text: 'Resize Canvas'
            on_state: app.root.toggleBool = True if self.state == 'down' else False
        Button:
            size_hint: None, None
            size: 100, 50
            pos_hint: {"x": 0.834, "top": 1}
            text:'Export to .png'
            on_release: root.select_savePNG()
        
        TextInput:
            id: fileName
            pos_hint: {"x": 1, "top": 1}
            size_hint: 0.069, 0.05